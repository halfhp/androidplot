<resources>

    <attr name="renderMode" format="enum">
        <enum name="use_background_thread" value="0"/>
        <enum name="use_main_thread" value="0"/>
    </attr>

    <attr name="previewMode" format="enum">
        <enum name="line_and_point" value="0"/>
        <enum name="candlestick" value="1"/>
        <enum name="bar" value="2"/>
    </attr>

    <attr name="domainStepMode" format="enum">
        <enum name="subdivide" value="0"/>
        <enum name="increment_by_val" value="1"/>
        <enum name="increment_by_pixels" value="2"/>
    </attr>

    <attr name="rangeStepMode" format="enum">
        <enum name="subdivide" value="0"/>
        <enum name="increment_by_val" value="1"/>
        <enum name="increment_by_pixels" value="2"/>
    </attr>

    <attr name="lineLabels">
        <flag name="none" value="0"/>
        <flag name="left" value="1"/>
        <flag name="right" value="2"/>
        <flag name="top" value="4"/>
        <flag name="bottom" value="8"/>
    </attr>

    <!-- text alignment of top edge line labels. -->
    <attr name="lineLabelAlignTop">
        <enum name="left" value="0"/>
        <enum name="center" value="1"/>
        <enum name="right" value="2"/>
    </attr>

    <!-- text alignment of bottom edge labels. -->
    <attr name="lineLabelAlignBottom">
        <enum name="left" value="0"/>
        <enum name="center" value="1"/>
        <enum name="right" value="2"/>
    </attr>

    <!-- text alignment of left edge labels. -->
    <attr name="lineLabelAlignLeft">
        <enum name="left" value="0"/>
        <enum name="center" value="1"/>
        <enum name="right" value="2"/>
    </attr>

    <!-- text alignment of right edge labels. -->
    <attr name="lineLabelAlignRight">
        <enum name="left" value="0"/>
        <enum name="center" value="1"/>
        <enum name="right" value="2"/>
    </attr>

    <!-- values  must match the ordinal of its corresponding
    element in the AnchorPosition enum.  -->
    <attr name="graphAnchor" format="enum">
        <enum name="top_middle" value="0"/>
        <enum name="left_top" value="1"/>
        <enum name="left_middle" value="2"/>
        <enum name="left_bottom" value="3"/>
        <enum name="right_top" value="4"/>
        <enum name="right_middle" value="5"/>
        <enum name="right_bottom" value="6"/>
        <enum name="bottom_middle" value="7"/>
        <enum name="center" value="8"/>
    </attr>

    <attr name="domainTitleAnchor" format="enum">
        <enum name="top_middle" value="0"/>
        <enum name="left_top" value="1"/>
        <enum name="left_middle" value="2"/>
        <enum name="left_bottom" value="3"/>
        <enum name="right_top" value="4"/>
        <enum name="right_middle" value="5"/>
        <enum name="right_bottom" value="6"/>
        <enum name="bottom_middle" value="7"/>
        <enum name="center" value="8"/>
    </attr>

    <attr name="rangeTitleAnchor" format="enum">
        <enum name="top_middle" value="0"/>
        <enum name="left_top" value="1"/>
        <enum name="left_middle" value="2"/>
        <enum name="left_bottom" value="3"/>
        <enum name="right_top" value="4"/>
        <enum name="right_middle" value="5"/>
        <enum name="right_bottom" value="6"/>
        <enum name="bottom_middle" value="7"/>
        <enum name="center" value="8"/>
    </attr>

    <attr name="legendAnchor" format="enum">
        <enum name="top_middle" value="0"/>
        <enum name="left_top" value="1"/>
        <enum name="left_middle" value="2"/>
        <enum name="left_bottom" value="3"/>
        <enum name="right_top" value="4"/>
        <enum name="right_middle" value="5"/>
        <enum name="right_bottom" value="6"/>
        <enum name="bottom_middle" value="7"/>
        <enum name="center" value="8"/>
    </attr>

    <attr name="graphHeightMode" format="enum">
        <enum name="absolute" value="0"/>
        <enum name="relative" value="1"/>
        <enum name="fill" value="2"/>
    </attr>

    <attr name="graphWidthMode" format="enum">
        <enum name="absolute" value="0"/>
        <enum name="relative" value="1"/>
        <enum name="fill" value="2"/>
    </attr>

    <attr name="domainTitleHeightMode" format="enum">
        <enum name="absolute" value="0"/>
        <enum name="relative" value="1"/>
        <enum name="fill" value="2"/>
    </attr>

    <attr name="domainTitleWidthMode" format="enum">
        <enum name="absolute" value="0"/>
        <enum name="relative" value="1"/>
        <enum name="fill" value="2"/>
    </attr>

    <attr name="rangeTitleHeightMode" format="enum">
        <enum name="absolute" value="0"/>
        <enum name="relative" value="1"/>
        <enum name="fill" value="2"/>
    </attr>

    <attr name="rangeTitleWidthMode" format="enum">
        <enum name="absolute" value="0"/>
        <enum name="relative" value="1"/>
        <enum name="fill" value="2"/>
    </attr>

    <attr name="legendHeightMode" format="enum">
        <enum name="absolute" value="0"/>
        <enum name="relative" value="1"/>
        <enum name="fill" value="2"/>
    </attr>

    <attr name="legendWidthMode" format="enum">
        <enum name="absolute" value="0"/>
        <enum name="relative" value="1"/>
        <enum name="fill" value="2"/>
    </attr>

    <attr name="legendIconHeightMode" format="enum">
        <enum name="absolute" value="0"/>
        <enum name="relative" value="1"/>
        <enum name="fill" value="2"/>
    </attr>

    <attr name="legendIconWidthMode" format="enum">
        <enum name="absolute" value="0"/>
        <enum name="relative" value="1"/>
        <enum name="fill" value="2"/>
    </attr>

    <attr name="graphHorizontalPositioning" format="enum">
        <enum name="absolute_from_left" value="0"/>
        <enum name="absolute_from_right" value="1"/>
        <enum name="absolute_from_center" value="2"/>
        <enum name="relative_from_left" value="3"/>
        <enum name="relative_from_right" value="4"/>
        <enum name="relative_from_center" value="5"/>
    </attr>

    <attr name="graphVerticalPositioning" format="enum">
        <enum name="absolute_from_top" value="0"/>
        <enum name="absolute_from_bottom" value="1"/>
        <enum name="absolute_from_center" value="2"/>
        <enum name="relative_from_top" value="3"/>
        <enum name="relative_from_bottom" value="4"/>
        <enum name="relative_from_center" value="5"/>
    </attr>

    <attr name="domainTitleHorizontalPositioning" format="enum">
        <enum name="absolute_from_left" value="0"/>
        <enum name="absolute_from_right" value="1"/>
        <enum name="absolute_from_center" value="2"/>
        <enum name="relative_from_left" value="3"/>
        <enum name="relative_from_right" value="4"/>
        <enum name="relative_from_center" value="5"/>
    </attr>

    <attr name="domainTitleVerticalPositioning" format="enum">
        <enum name="absolute_from_top" value="0"/>
        <enum name="absolute_from_bottom" value="1"/>
        <enum name="absolute_from_center" value="2"/>
        <enum name="relative_from_top" value="3"/>
        <enum name="relative_from_bottom" value="4"/>
        <enum name="relative_from_center" value="5"/>
    </attr>

    <attr name="rangeTitleHorizontalPositioning" format="enum">
        <enum name="absolute_from_left" value="0"/>
        <enum name="absolute_from_right" value="1"/>
        <enum name="absolute_from_center" value="2"/>
        <enum name="relative_from_left" value="3"/>
        <enum name="relative_from_right" value="4"/>
        <enum name="relative_from_center" value="5"/>
    </attr>

    <attr name="rangeTitleVerticalPositioning" format="enum">
        <enum name="absolute_from_top" value="0"/>
        <enum name="absolute_from_bottom" value="1"/>
        <enum name="absolute_from_center" value="2"/>
        <enum name="relative_from_top" value="3"/>
        <enum name="relative_from_bottom" value="4"/>
        <enum name="relative_from_center" value="5"/>
    </attr>

    <attr name="legendHorizontalPositioning" format="enum">
        <enum name="absolute_from_left" value="0"/>
        <enum name="absolute_from_right" value="1"/>
        <enum name="absolute_from_center" value="2"/>
        <enum name="relative_from_left" value="3"/>
        <enum name="relative_from_right" value="4"/>
        <enum name="relative_from_center" value="5"/>
    </attr>

    <attr name="legendVerticalPositioning" format="enum">
        <enum name="absolute_from_top" value="0"/>
        <enum name="absolute_from_bottom" value="1"/>
        <enum name="absolute_from_center" value="2"/>
        <enum name="relative_from_top" value="3"/>
        <enum name="relative_from_bottom" value="4"/>
        <enum name="relative_from_center" value="5"/>
    </attr>

    <!-- Plot -->
    <declare-styleable name="Plot">
        <attr name="markupEnabled" format="boolean"/>
        <attr name="renderMode"/>
        <attr name="marginTop" format="dimension"/>
        <attr name="marginBottom" format="dimension"/>
        <attr name="marginLeft" format="dimension"/>
        <attr name="marginRight" format="dimension"/>
        <attr name="paddingTop" format="dimension"/>
        <attr name="paddingBottom" format="dimension"/>
        <attr name="paddingLeft" format="dimension"/>
        <attr name="paddingRight" format="dimension"/>
        <attr name="title" format="string"/>
        <attr name="titleTextSize" format="dimension"/>
        <attr name="titleTextColor" format="color"/>
        <attr name="backgroundColor" format="color"/>
        <attr name="borderColor" format="color"/>
        <attr name="borderThickness" format="dimension"/>
    </declare-styleable>

    <!-- XYPlot -->
    <declare-styleable name="xy.XYPlot" parent="@style/Plot">

        <attr name="previewMode"/>

        <attr name="domainStepMode"/>
        <attr name="domainStep" format="dimension|float|integer"/>

        <attr name="rangeStepMode"/>
        <attr name="rangeStep" format="dimension|float|integer"/>

        <!-- domain label -->
        <attr name="domainTitle" format="string"/>
        <attr name="domainTitleTextColor" format="color"/>
        <attr name="domainTitleTextSize" format="dimension"/>
        <attr name="domainTitleHeightMode"/>
        <attr name="domainTitleWidthMode"/>
        <attr name="domainTitleHeight" format="dimension|float|integer"/>
        <attr name="domainTitleWidth" format="dimension|float|integer"/>
        <attr name="domainTitleHorizontalPositioning"/>
        <attr name="domainTitleVerticalPositioning"/>
        <attr name="domainTitleHorizontalPosition" format="dimension|float|integer"/>
        <attr name="domainTitleVerticalPosition" format="dimension|float|integer"/>
        <attr name="domainTitleAnchor"/>
        <attr name="domainTitleVisible" format="boolean"/>

        <!-- range label -->
        <attr name="rangeTitle" format="string"/>
        <attr name="rangeTitleTextColor" format="color"/>
        <attr name="rangeTitleTextSize" format="dimension"/>
        <attr name="rangeTitleHeightMode"/>
        <attr name="rangeTitleWidthMode"/>
        <attr name="rangeTitleHeight" format="dimension|float|integer"/>
        <attr name="rangeTitleWidth" format="dimension|float|integer"/>
        <attr name="rangeTitleHorizontalPositioning"/>
        <attr name="rangeTitleVerticalPositioning"/>
        <attr name="rangeTitleHorizontalPosition" format="dimension|float|integer"/>
        <attr name="rangeTitleVerticalPosition" format="dimension|float|integer"/>
        <attr name="rangeTitleAnchor"/>
        <attr name="rangeTitleVisible" format="boolean"/>

        <!-- graph widget -->
        <attr name="graphHeightMode"/>
        <attr name="graphWidthMode"/>
        <attr name="graphHeight" format="dimension|float|integer"/>
        <attr name="graphWidth" format="dimension|float|integer"/>
        <attr name="graphHorizontalPositioning"/>
        <attr name="graphVerticalPositioning"/>
        <attr name="graphHorizontalPosition" format="dimension|float|integer"/>
        <attr name="graphVerticalPosition" format="dimension|float|integer"/>
        <attr name="graphAnchor"/>
        <attr name="graphVisible" format="boolean"/>
        <attr name="graphMarginTop" format="dimension"/>
        <attr name="graphMarginBottom" format="dimension"/>
        <attr name="graphMarginLeft" format="dimension"/>
        <attr name="graphMarginRight" format="dimension"/>
        <attr name="graphPaddingTop" format="dimension"/>
        <attr name="graphPaddingBottom" format="dimension"/>
        <attr name="graphPaddingLeft" format="dimension"/>
        <attr name="graphPaddingRight" format="dimension"/>

        <attr name="gridClippingEnabled" format="boolean"/>

        <attr name="gridInsetTop" format="dimension"/>
        <attr name="gridInsetBottom" format="dimension"/>
        <attr name="gridInsetLeft" format="dimension"/>
        <attr name="gridInsetRight" format="dimension"/>

        <!-- these insets define a rectangle relative to the XYGraphWidget
        border upon which line labels will be anchored. -->
        <attr name="lineLabelInsetTop" format="dimension"/>
        <attr name="lineLabelInsetBottom" format="dimension"/>
        <attr name="lineLabelInsetLeft" format="dimension"/>
        <attr name="lineLabelInsetRight" format="dimension"/>

        <!-- Enable line labels for each edge of the graph.
        ex: lineLabels="left|bottom" -->
        <attr name="lineLabels"/>

        <!-- controls the alignment of the text rendered for each line label.
        this alignment is applied relative to the line label insets defined by
        lineLabelInsetTop, lineLabelInsetBottom, etc. -->
        <attr name="lineLabelAlignTop"/>
        <attr name="lineLabelAlignBottom"/>
        <attr name="lineLabelAlignLeft"/>
        <attr name="lineLabelAlignRight"/>

        <!-- sets the angle at which the line labels are drawn. -->
        <attr name="lineLabelRotationTop" format="float"/>
        <attr name="lineLabelRotationBottom" format="float"/>
        <attr name="lineLabelRotationLeft" format="float"/>
        <attr name="lineLabelRotationRight" format="float"/>

        <attr name="domainLineThickness" format="dimension"/>
        <attr name="rangeLineThickness" format="dimension"/>
        <attr name="domainLineColor" format="color"/>
        <attr name="rangeLineColor" format="color"/>
        <attr name="domainOriginLineThickness" format="dimension"/>
        <attr name="rangeOriginLineThickness" format="dimension"/>
        <attr name="domainOriginLineColor" format="color"/>
        <attr name="rangeOriginLineColor" format="color"/>

        <!-- text color & size params for line labels
        TODO: break these into separate params for each edge -->
        <attr name="lineLabelTextSizeTop" format="dimension"/>
        <attr name="lineLabelTextSizeBottom" format="dimension"/>
        <attr name="lineLabelTextSizeLeft" format="dimension"/>
        <attr name="lineLabelTextSizeRight" format="dimension"/>
        <attr name="lineLabelTextColorTop" format="dimension"/>
        <attr name="lineLabelTextColorBottom" format="dimension"/>
        <attr name="lineLabelTextColorLeft" format="dimension"/>
        <attr name="lineLabelTextColorRight" format="dimension"/>

        <attr name="lineExtensionTop" format="dimension"/>
        <attr name="lineExtensionBottom" format="dimension"/>
        <attr name="lineExtensionLeft" format="dimension"/>
        <attr name="lineExtensionRight" format="dimension"/>

        <!-- background color of the grid portion of the XYGraphWidget -->
        <attr name="gridBackgroundColor" format="color"/>

        <!-- background color of the XYGraphWidget -->
        <attr name="graphBackgroundColor" format="color"/>

        <!-- legend widget -->
        <attr name="legendHeightMode"/>
        <attr name="legendWidthMode"/>
        <attr name="legendHeight" format="dimension|float|integer"/>
        <attr name="legendWidth" format="dimension|float|integer"/>
        <attr name="legendHorizontalPositioning"/>
        <attr name="legendVerticalPositioning"/>
        <attr name="legendHorizontalPosition" format="dimension|float|integer"/>
        <attr name="legendVerticalPosition" format="dimension|float|integer"/>
        <attr name="legendAnchor"/>
        <attr name="legendTextSize" format="dimension"/>
        <attr name="legendTextColor" format="color"/>
        <attr name="legendIconHeightMode"/>
        <attr name="legendIconWidthMode"/>
        <attr name="legendIconHeight" format="dimension|float|integer"/>
        <attr name="legendIconWidth" format="dimension|float|integer"/>
        <attr name="legendVisible" format="boolean"/>

        <!-- set how far beyond the grid edge each line should extend
        TODO: break these out into unique params for each edge. -->
        <attr name="domainLineExtension" format="dimension"/>
        <attr name="rangeLineExtension" format="dimension"/>
    </declare-styleable>

    <!-- TODO: PieChart -->
    <declare-styleable name="pie.PieChart" parent="@style/Plot">
        <attr name="pieBorderColor" format="color"/>
        <attr name="pieBorderThickness" format="dimension"/>
    </declare-styleable>
</resources>